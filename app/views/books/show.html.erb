<main>
  <div class="container px-5 px-sm0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user,:profile_image,:fill,100,100,format:'ipeg',fallback:"no_image.jpeg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%=@user.name%></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%=@user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path,class:'btn btn-outline-secondary btn-block ',method: :get do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        </table>
        <h2 class=mt-3>New book</h2>
        <%= form_with model: @book, url:book_path, local:true do |f|%>
         <div class="field">
         <label>Title</label>
         <%= f.text_field :title %>
         </div>

         <div class="field">
         <label>Opinion</label>
         <%= f.text_area :body %>
         </div>

         <div class="field">
         <%= f.submit "Create Book"%>
         </div>
        <% end %>
      </div>
      <div class="col-md-8 offsemd-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% @books.each do |book| %>
              <td><%= book.title%></td>
              <td><%= book.body%></td>
              <% end %>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</main>