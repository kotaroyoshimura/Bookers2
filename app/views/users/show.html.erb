<p id="notice"><%=flash[:user_profile_update] %></p>
 <div class="container px-5 px-sm-0">
   <div class="row">
     <div class="col-md-3">
       <h2>User info</h2>
        <%= attachment_image_tag @user,:profile_image,:fill,100,100,format:'ipeg',fallback:"no_image.jpeg" %>
         <table class="table">
          <tbody>
           <tr></tr>
           <tr>
            <th>name</th>
            <th><%=@user.name%></th>
           </tr>
           <tr>
            <th>introduction</th>
            <th><%=@user.introduction%></th>
           </tr>
          </tbody>
         </table>
         <div class="row">
          <%= link_to edit_user_path(@user),class:'btn btn-outline-secondary btn-block fas fa-user-cog' do %>
          <% end %>
         </div>
        <h2 class=mt-3>New book</h2>
        <%= form_with model: @book, url:books_path, local:true do |f|%>
         <div class="form-group">
          <label for="book_title">Title</label>
         <%= f.text_field:title, class:"form-control" %>
         </div>

         <div class="form-group">
         <label for="book-opinion">Opinion</label>
         <%= f.text_area:body,class:"form-control" %>
         </div>

         <div class="form-group">
         <%= f.submit "Create Book",class:"btn btn-success"%>
         </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
         <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
          <% @books.each do |book| %>
          <tr>
           <td><%= attachment_image_tag @user, :profile_image, :fill,40,40, format: 'jpeg', fallback: "no_image.jpg",size:'40x40'%></td>
           <td>
            <%=link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
           </td>
           <td><%= book.body %></td>
          </tr>
          <% end %>
         </tbody>
        </table>
      </div>
    </div>
  </div>